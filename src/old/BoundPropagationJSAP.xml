<jsap>
    <parameters>
        <flaggedOption>
            <id>input</id>
            <stringParser>
                <classname>FileStringParser</classname>
            </stringParser> 
            <required>false</required>
            <shortFlag>i</shortFlag>
            <help>The GasLib network file (.net) on which bound propagation should be performed. A zip file (.zip) with a single .net GasLib network file in its top level directory is also valid.</help>
        </flaggedOption>
		
        <flaggedOption>
            <id>inputtikz</id>
            <stringParser>
                <classname>FileStringParser</classname>
            </stringParser> 
            <required>false</required>
            <shortFlag>t</shortFlag>
            <help>Specifies a file into which TikZ code depicting the original network will be written.</help>
        </flaggedOption>	
        
        <flaggedOption>
            <id>outputtikz</id>
            <stringParser>
                <classname>FileStringParser</classname>
            </stringParser> 
            <required>false</required>
            <shortFlag>o</shortFlag>
            <help>Specifies a file into which TikZ code depicting the reduced network will be written.</help>
        </flaggedOption>                	
		
        <flaggedOption>
            <id>settings</id>
            <stringParser>
                <classname>FileStringParser</classname>
            </stringParser> 
            <required>false</required>
            <shortFlag>s</shortFlag>
            <defaults>
                <string>Settings.xml</string>
            </defaults>
            <help>The settings file from which user settings are loaded and saved.</help>
        </flaggedOption>		

        <qualifiedSwitch>
            <id>verbose</id>
            <shortFlag>v</shortFlag>
            <longFlag>verbose</longFlag>
            <help>Requests verbose output.</help>
        </qualifiedSwitch>
    </parameters>
</jsap>